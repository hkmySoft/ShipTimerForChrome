{
	"name": "艦これタイマー連携ツール",
	"version": "0.1.1",
	"description": "遠征・入渠・建造完了時間をiPhone版 艦これタイマーに送信するツールです。",
	"icons": {
		"128": "src/img/icon128.png"
	},
	"manifest_version":2,
	"permissions": [
		"webRequest",
		"<all_urls>"
	],
	"browser_action": {
		"default_title": "艦これタイマー連携ツール",
		"default_icon": "src/img/icon128.png",
		"default_popup": "src/html/popup.html"
	},
	"background" : {
		"persistent" : true,
		"scripts" : [
			"src/js/constants.js",
			"src/js/actions/action.js",
			"src/js/actions/mission.js",
			"src/js/actions/hospital.js",
			"src/js/actions/build.js",
			"src/js/dispatcher.js",
			"src/js/util.js",
			"src/js/apns.js",
			"src/lib/oauth2/oauth2.js",
			"src/lib/aws-sdk-2.0.0-rc13.min.js",
			"src/js/main.js"
		]
	},
	"content_scripts": [
		{
			"matches": ["https://www.google.com/robots.txt*"],
			"js": ["src/lib/oauth2/oauth2_inject.js"],
				"run_at": "document_start"
		},
		{
			"matches" : [
				"http://osapi.dmm.com/gadgets/ifr?*"
			],
			"js" : [
				"src/lib/jquery.min.js",
				"src/js/constants.js",
				"src/js/embed.js"
			]
		},
		{
			"matches" : [
				"http://www.dmm.com/netgame/social/-/gadgets/=/app_id=854854/?shiptimer=true*"
			],
			"js" : [
                "src/js/transfer.js"
			]
		}

	],
	"web_accessible_resources" : [
		"src/lib/oauth2/oauth2.html"
	]
}
